
@section Styles{
    <link href="~/css/logpage.css" rel="stylesheet" />
}

@using GameShop.Models.ViewModels

@model LoginVM


<div class="background">
    <div class="shape"></div>
    <div class="shape"></div>
</div>
<form asp-action="Login" asp-controller="Login" method="post">
    <h3>Login Here</h3>

    <label asp-for="Email">Email</label>
    <input asp-for="Email" type="text" placeholder="Email" id="username">
    <span style="color:red; font-size:small" asp-validation-for="Email"></span>

    <label asp-for="Password">Password</label>
    <input asp-for="Password" type="password" placeholder="Password" id="password">
    <span style="color:red; font-size:small" asp-validation-for="Password"></span>

    <button type="submit">Log In</button>
    <p style="margin:0; font-size:small">Do you want to <a asp-action="SignUp" asp-controller="SignUp" style="color:aqua">sign up</a>?</p>
    <div class="social">
        <div class="go"><i class="fab fa-google"></i>  Google</div>
        <div class="fb"><i class="fab fa-facebook"></i>  Facebook</div>
    </div>
</form>